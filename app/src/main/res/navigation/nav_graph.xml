<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/LoginFragment">

    <fragment
            android:id="@+id/LoginFragment"
            android:name="com.example.crosstalk.Login"
            android:label="@string/first_fragment_label"
            tools:layout="@layout/login_fragment">

        <action
                android:id="@+id/action_FirstFragment_to_SecondFragment"
                app:destination="@id/SignUpFragment"/>
        <action android:id="@+id/action_FirstFragment_to_MainFragment"
                app:destination="@id/HomeFragment"/>
    </fragment>
    <fragment
            android:id="@+id/SignUpFragment"
            android:name="com.example.crosstalk.SignUp"
            android:label="@string/second_fragment_label"
            tools:layout="@layout/sign_up_fragment">

        <action
                android:id="@+id/action_SecondFragment_to_FirstFragment"
                app:destination="@id/LoginFragment"/>
    </fragment>
    <fragment
            android:id="@+id/HomeFragment"
            android:name="com.example.crosstalk.Home"
            android:label="home_fragment_label"
            tools:layout="@layout/home_fragment">

    </fragment>
    <fragment
            android:id="@+id/ProfileFragment"
            android:name="com.example.crosstalk.Profile"
            android:label="profile_fragment_label"
            tools:layout="@layout/profile_fragment">

    </fragment>
</navigation>